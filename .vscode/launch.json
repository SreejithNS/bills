        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server Debugger",
            "protocol": "inspector",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--inspect=9222"
            ],
            "program": "${workspaceFolder}/server/bin/www",
            "port": 9222,
            "restart": true,
            "envFile": "${workspaceFolder}/server/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
