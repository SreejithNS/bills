{
	"name": "billz",
	"version": "1.0.0",
	"main": "server/www/bin",
	"repository": "https://github.com/SreejithNS/bills.git",
	"author": "SreejithNS <nssreejith229@gmail.com>",
	"license": "MIT",
	"private": false,
	"devDependencies": {
		"concurrently": "^7.1.0",
		"cross-env": "^7.0.3"
	},
	"scripts": {
		"preinstall": "npm install --global yarn",
		"install": "cd server && yarn && cd ../client && yarn",
		"build": "cd client && yarn run build",
		"dev:server": "cd server && cross-env NODE_ENV=development yarn dev",
		"dev:client": "cd client && cross-env NODE_ENV=development yarn start",
		"dev": "concurrently -c \"greenBright,blueBright\" -n \"NODEJS,REACT \" \"yarn run dev:server --inspect\" \"yarn run dev:client --inspect\"",
		"start": "cd server && cross-env NODE_ENV=production yarn start"
	}
}
