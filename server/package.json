{
	"name": "billzapp-rest-api-server",
	"version": "0.0.1",
	"description": "The REST server for billzapp",
	"main": "./dist/index.js",
	"author": "SreejithNS",
	"license": "MIT",
	"private": false,
	"type": "module",
	"scripts": {
		"build": "tsc",
		"dev": "eslint --fix --ext .ts ./src && concurrently \"tsc -w\" \"nodemon\"",
		"lint": "eslint --fix --ext .ts ./src"
	},
	"devDependencies": {
		"@types/node": "^18.11.15",
		"concurrently": "^7.6.0",
		"eslint": "^8.2.0",
		"eslint-config-airbnb": "19.0.4",
		"eslint-config-node": "^4.1.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"husky": "8.0.2",
		"lint-staged": "13.1.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.1",
		"typescript": "^4.9.4"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"eslint --fix",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint-staged"
		}
	}
}
